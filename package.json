{
  "name": "trabalho-final-automacao-web",
  "version": "1.0.0",
  "description": "Automation Exercise - Automated Web Testing Project",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",
    "cy:run:headed": "cypress run --headed",
    "cy:report:merge": "mochawesome-merge cypress/reports/json/*.json > cypress/reports/mochawesome-bundle.json",
    "cy:report:generate": "marge cypress/reports/mochawesome-bundle.json -f index.html -o cypress/reports/html",
    "cy:report:clean": "rm -rf cypress/reports && mkdir -p cypress/reports/json cypress/reports/html",
    "cy:report": "npm run cy:report:merge && npm run cy:report:generate"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "cypress": "^15.5.0",
    "cypress-mochawesome-reporter": "^3.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
